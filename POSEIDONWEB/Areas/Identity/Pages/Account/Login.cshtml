@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Your Page Title</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            /* background-image: url('https://images.wallpaperscraft.com/image/single/water_underwater_depth_197405_1920x1080.jpg'); */           
            background-size: cover;
            background-position: center;
            background-attachment: fixed; /* Optional: Fixed background while scrolling */
        }

        /* Add additional styles as needed */
    </style>
</head>
<body>
    <div class="container mt-4">
        @* <section class="h-100 gradient-form" style="display:flex; background-color: #fff; flex: 1 1 auto ; height: 100%"> *@
            <div class="container py-2 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-xl-10">
                        <div class="card shadow rounded-4 text-black bg-primary">
                            <div class="row g-0">
                                <div class="col-lg-5">
                                    <div class="card-body pd-1 mx-md-4">
                                        <div class="text-center">
                                            <img class="rounded-3" src="https://www.nicepng.com/png/detail/913-9135800_logo-examples-poseidon-logo-png.png"
                                                 style="width: 120px;" alt="logo">
                                            <h4 class="mt-3 mb-3 pb-1 text-light">POSEIDON</h4>
                                        </div>

                                        <form id="account" method="post">
                                            <p class="text-light">Please login to your account</p>
                                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                            <div class="form-outline mb-4">
                                                <label asp-for="Input.Email" class="form-label text-dark">Email</label>
                                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <label asp-for="Input.Password" class="form-label text-dark">Password</label>
                                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                            <div class="checkbox mb-3">
                                                <label asp-for="Input.RememberMe" class="form-label text-light">
                                                    <input class="form-check-input mx-2" asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                            <div class="text-center pt-1 mb-3 pb-1">
                                                <button id="login-submit" type="submit" class="btn btn-info btn-l w-100 fa-lg gradient-custom-2 mb-3">
                                                    Log
                                                    in
                                                </button>

                                                <a id="forgot-password" asp-page="./ForgotPassword"> <p class="text-light fw-bold">Forgot your password?</p></a>
                                            </div>

                                            <div class="d-flex align-items-center justify-content-center pb-4">
                                                <p class="mb-0 me-2 text-secondary">Don't have an account?</p>
                                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><p class="mb-0 me-2 text-light fw-bold">Create New User</p></a>
                                            </div>

                                        </form>

                                    </div>
                                </div>
                                <div class="col-lg-7 d-flex align-items-center gradient-custom-2 bg-warning rounded-end-4">
                                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                        <h4 class="mb-4">Welcome to POSEIDON</h4>
                                        <p class="small mb-0">
                                            Your all-in-one solution for seamless water billing and collection.
                                            Our Meter Reader System ensures accuracy and convenience.
                                            Dive into efficient water management with us!
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @* </section> *@


    </div>
</body>
</html>



