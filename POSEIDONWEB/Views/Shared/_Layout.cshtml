<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POSEIDON</title>
   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/POSEIDONWEB.styles.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />  
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary " data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">POSEIDON</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="col-auto btn-group" role="group">
                    <ul class="navbar-nav flex-me-auto">
                        
                        <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" asp-area="Consumer" class="btn rounded shadow btn-info mx-1">
                                Home
                            </a>
                        </li>
                        @if (User.IsInRole(SD.Role_Employee) || User.IsInRole(SD.Role_Admin))
                            {
                            <li class="nav-item">
                                    <a asp-controller="" asp-action="" asp-area="" class="btn rounded shadow btn-info mx-1">
                                       Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                    <a asp-controller="" asp-action="" asp-area="" class="btn rounded shadow btn-info mx-1">
                                    Consumers
                                </a>
                            </li>
                            <li class="nav-item">
                                    <a asp-controller="" asp-action="" asp-area="" class="btn rounded shadow btn-info mx-1">
                                    Billing
                                </a>
                            </li>
                            <li class="nav-item">
                                    <a asp-controller="" asp-action="" asp-area="" class="btn rounded shadow btn-info mx-1">
                                    Collection
                                </a>
                            </li>
                            <li class="nav-item">
                                    <a asp-controller="" asp-action="" asp-area="" class="btn rounded shadow btn-info mx-1">
                                    Reading
                                </a>
                            </li>
                            <li class="nav-item">
                                    <a asp-controller="" asp-action="" asp-area="" class="btn rounded shadow btn-info mx-1">
                                    Reports
                                </a>
                            </li>
                            }                       
                       
                                                     
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light mx-1" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li> <a class="dropdown-item text-light" asp-area="Admin" asp-controller="Province" asp-action="Index">Province</a></li>
                                    <li><a class="dropdown-item text-light" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a></li>
                                    <li><a class="dropdown-item text-light" href="#">Something else here</a></li>
                                </ul>
                            </li>
                            
                        }
                        <li class="nav-item">

                        </li>
                    </ul>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-primary">
        <div class="mx-3"><a class="nav-link text-light" asp-area="Terms" asp-controller="Privacy" asp-action="PrivacyPolicy">Privacy Policy</a></div>      
        <div class="text-center text-light">
            Copyright 2023 | <a href="https://vivito.tech/" class="text-light ml-3"> VIVITO IT Solutions </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/1y6s6hwsakvuzc1hsl2iwoqcm11v6t2ijv7uaaqs5qhp0try/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
